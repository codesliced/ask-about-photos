<!DOCTYPE html>
<html>
<head>
  <title>PhotoOverflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
	 <link href='http://fonts.googleapis.com/css?family=Asap:400,400italic' rel='stylesheet' type='text/css'>
	 <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
	 <link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Header -->
	<div class="container">
	    <div class="header row">
	        <div class="span12">
	            <div class="navbar">
	                <div class="navbar-inner">
	                    <h1>
	                        <%= link_to "PhotoOverflow", root_path %>
	                    </h1>
	                    <div class="nav-collapse collapse">
	                        <ul class="nav pull-right">
	                            <li>
	                                <%= link_to root_path do %>
	                                <i class="icon-home"></i><br /><span class="nav-text">Home</span>
	                                <% end %>
	                            </li>
	                            <li>
	                                <%= link_to ask_question_path  do %>
	                                <i class="icon-question-sign"></i><br /><span class="nav-text">Ask a question</span>
	                                  <% end %>
	                            </li>
			                        <li>
	                                <%= render 'shared/navbar_username' %>
	                            </li>
	                            <li>
	                            	  <%= render 'shared/navbar_logout' %> 
	                            </li>
	                        </ul>
	                    </div>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
<div class="presentation container">
<%= yield %>
</div>
</body>
</html>
