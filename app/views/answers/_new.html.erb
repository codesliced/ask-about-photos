<div class="answer-form">
<div class="answer-form-intro">Add your answer and upload a photo to go with it. </div>
<%= form_for @answer, :multipart => true, url: question_answers_path(@question) do |f| %>
  <%= f.file_field :file %>
  <%= f.hidden_field :question_id, value: @question.id %>
  <p><%= f.text_area :content, rows: 2 , cols: 35, placeholder: 'Impart your wisdom. Be kind.'  %></p>
  <p><%= f.submit "Submit" %></p>
<% end %>
</div>
